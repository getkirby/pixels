[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true

[*.php]
indent_size = 4
insert_final_newline = true

[site/{layouts,snippets,templates}/**.php]
indent_size = 2

[site/plugins/**/{layouts,snippets,templates}/**.php]
indent_size = 2

[*.{css,scss,less,js,json,ts,sass,html,hbs,mustache,phtml,html.twig,md,yml}]
insert_final_newline = true

[*.md]
indent_style = space
trim_trailing_whitespace = false

[*.yml]
indent_style = space

[package.json,.{babelrc,editorconfig,eslintrc,lintstagedrc,stylelintrc}]
indent_style = space
